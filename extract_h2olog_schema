#!/usr/bin/env python3
import sys
import importlib.util
from pathlib import Path
from pprint import pprint
from collections import OrderedDict

block_field_set = set([
  "bytes",
  "src",
  "stateless_reset_token",
])

def load_gen_bpf(h2o_dir):
  spec = importlib.util.spec_from_file_location("gen_bpf", "%s/src/h2olog/misc/gen-quic-bpf.py" % h2o_dir)
  module = importlib.util.module_from_spec(spec)
  spec.loader.exec_module(module)
  return module

gen_bpf = None

def c_to_bq_type(row_name, ctype):
  if row_name == "time":
    return "timestamp"
  elif "*" in ctype: # ptr
    return "string"
  else:
    return "int64"

def gen_bq_ddl(context, table_name):
  probe_metadata = context["probe_metadata"]

  row_map = OrderedDict()
  for name, metadata in probe_metadata.items():
    fully_specified_probe_name = metadata["fully_specified_probe_name"]
    original_block_field_set = gen_bpf.block_fields.get(fully_specified_probe_name, set())

    for field_name, field_type in metadata["flat_args_map"].items():
      if field_name in original_block_field_set:
        continue
      if field_name in block_field_set:
        continue

      row_name = gen_bpf.rename_map.get(field_name, field_name).replace("-", "_")
      row = "`%s` %s" % (row_name, c_to_bq_type(row_name, field_type))
      row_map[row] = None

  return r"""
create table `%s` (
  `type` string,
  `ordering` int64, -- a sequence number added by h2olog-collector
  `seq` int64, -- a sequence number added by `h2olog`

  `lost` int64, -- type="h2olog-event-lost"

  `first_octet` int64, -- first octet of quicly:receive#bytes
  %s
)
partition by date(`time`);
""" % (table_name, ",\n  ".join(row_map.keys()))

def main():
  global gen_bpf

  try:
    (_, h2o_dir, table_name, output_file) = sys.argv
  except:
    print("usage: extract_h2olog_schema h2o_dir table_name output_file")
    sys.exit(1)

  gen_bpf = load_gen_bpf(h2o_dir)

  context = gen_bpf.prepare_context(Path(h2o_dir))
  ddl = gen_bq_ddl(context, table_name=table_name)
  Path(output_file).write_text(ddl)

if __name__ == "__main__":
  main()